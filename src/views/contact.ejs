<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kontak</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" rel="stylesheet">
</head>

<body>
    <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
        <a class="navbar-brand" href="<%= url %>">Priboen</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="<%= url %>">Home</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="<%= url %>contact">Kontak</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="<%= url %>profile">Profile</a>
                </li>
            </ul>
        </div>
    </nav>

    <section class="mt-5 pt-5 pb-5">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="card shadow-lg">
                        <div class="card-header">
                            <h1 class="text-center text-white">Kontak</h1>
                        </div>
                        <div class="card-body">
                            <a href="<%= url + 'contact/add' %>" class="btn btn-success mb-3">Tambah Data</a>
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Nama</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Address</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (contacts.length > 0) { %>
                                        <% contacts.forEach(contact => { %>
                                            <tr>
                                                <td><%= contact.name %></td>
                                                <td><%= contact.email %></td>
                                                <td><%= contact.phone %></td>
                                                <td><%= contact.address %></td>
                                                <td>
                                                    <a href="<%= url + 'contact/edit/' + contact.id %>"
                                                        class="btn btn-warning btn-sm">Edit</a>
                                                    <a href="<%= url + 'contact/delete/' + contact.id %>"
                                                        class="btn btn-danger btn-sm"
                                                        onclick="return confirm('Are you sure you want to delete this item?')">Delete</a>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="5" class="text-center">No Data</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <style>
        /* Custom CSS for Contact Page */
        body {
            background: url('https://i.pinimg.com/736x/78/19/e6/7819e60bd44f606520a166b2c4ca9828.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #ecf0f1;
            font-family: 'Arial', sans-serif;
        }

        .navbar {
            background-color: #2c3e50;
        }

        .navbar-brand {
            font-size: 24px;
        }

        .navbar-nav .nav-link {
            font-size: 18px;
        }

        .navbar-nav .nav-item.active .nav-link {
            color: #3498db;
        }

        /* Card */
        .card {
            border-radius: 15px;
            box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.2);
        }

        .card-header {
            background-color: #2980b9;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
        }

        .card-body {
            background-color: rgba(44, 93, 143, 0.7);;
            color: #ecf0f1;
        }

        .blockquote-footer {
            font-size: 14px;
            color: #7f8c8d;
        }

        /* Footer */
        footer {
            background-color: #2c3e50;
            color: #bdc3c7;
        }

        footer p {
            margin: 0;
        }

        /* Margin adjustment for sections */
        section {
            margin-top: 80px;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .navbar-nav {
                text-align: center;
            }

            .card {
                margin-top: 20px;
            }
        }

        /* Additional styles for image */
        .card-body img {
            max-width: 100%;
            height: auto;
        }
    </style>
</body>

</html>
